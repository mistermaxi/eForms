@page
@model eForms.Pages.Admin.CreateUserModel
@{ ViewData["Title"] = "eForms Application";
    ViewData["breadcrumb1"] = "Permissions";
    ViewData["breadcrumb2"] = "Users";
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>@ViewData["breadcrumb2"] - Add New</strong>
                    </div>
                    <form class="form-horizontal" method="post">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="user.Username"></label>
                                <div class="col-md-9">
                                    <select asp-for="aduser_selected" asp-items="@(new SelectList(Model.adusers,"mail","displayname"))" class="form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="userrole.FormId"></label>
                                <div class="col-md-9">
                                    <select asp-for="form_selected" asp-items="@(new SelectList(Model.forms,"Id","formtitle"))" class="form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="userrole.Role"></label>
                                <div class="col-md-9">
                                    <select asp-for="role_selected" asp-items="@(new SelectList(Enum.GetNames(typeof(eForms.Domain.Enums.eFormRole))))" class="form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="select1">Is Disabled?</label>
                                <div class="col-md-9">
                                    <select asp-for="userrole.Disabled" class="form-control">
                                        <option value="false">False</option>
                                        <option value="true">True</option>

                                    </select>
                                </div>
                            </div>


                        </div>
                        <div class="card-footer">
                            <input type="submit" id="modalbtnSubmt" value="Submit" class="btn btn-primary" />
                            <a asp-page="ManageUsers" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>

            </div>

            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>
