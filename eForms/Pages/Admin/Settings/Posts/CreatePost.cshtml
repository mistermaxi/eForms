@page
@model eForms.Pages.Admin.CreatePostModel
@{ ViewData["Title"] = "eForms Application";
    ViewData["breadcrumb1"] = "Settings";
    ViewData["breadcrumb2"] = "Posts"; }
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>@ViewData["breadcrumb2"] - Add New</strong>
                    </div>
                    <form class="form-horizontal" method="post">
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="post.PostCity"></label>
                                <div class="col-md-9">
                                    <input asp-for="post.PostCity" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="post.PostCountry"></label>
                                <div class="col-md-9">
                                    <select asp-for="country_selected" asp-items="@(new SelectList(Model.countries,"CountryName","CountryName"))" class="form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="post.PostBureau"></label>
                                <div class="col-md-9">
                                    <select asp-for="post.PostBureau" class="form-control" asp-items="Html.GetEnumSelectList<eForms.Domain.Enums.PostBureaus>()">
                                    </select>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="select1">Is Disabled?</label>
                                <div class="col-md-9">
                                    <select asp-for="post.Disabled" class="form-control">
                                        <option value="false">False</option>
                                        <option value="true">True</option>

                                    </select>
                                </div>
                            </div>


                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <a asp-page="Posts" class="btn btn-danger">Back to List</a>
                        </div>
                    </form>
                </div>

            </div>

            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>