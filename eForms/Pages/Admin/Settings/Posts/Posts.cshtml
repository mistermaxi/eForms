<div class="container-fluid">
    <div class="animated fadeIn">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> @ViewData["breadcrumb2"]
                        <div class="card-header-actions">
                            <a asp-page="CreatePost" class="btn btn-brand btn-facebook">Create New</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            @if (Model.posts.Count() > 0)
                            {
                <table class="table table-responsive-sm table-bordered table-striped table-sm" id="eformtbl">
                    <thead>
                        <tr>
                            <th class="text-center">Post City</th>
                            <th class="text-center">Post Country</th>
                            <th class="text-center">Post Bureau</th>
                            @*<th class="text-center">Created Date</th>*@
                            <th class="text-center">Modified Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.posts)
                        {
                        <tr>
                            <td>@Html.DisplayFor(m => item.PostCity)</td>
                            <td>@Html.DisplayFor(m => item.PostCountry)</td>
                            <td>@Html.DisplayFor(m => item.PostBureau)</td>
                            @*<td class="text-center">@item.CreatedDate.ToString("MM/dd/yyyy")</td>*@
                            <td class="text-center">@item.ModifiedDate.ToString("MM/dd/yyyy")</td>
                            <td class="text-center">
                                <a asp-page="EditPost" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Edit</a>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure do you want to delete this record?')" class="btn btn-danger btn-sm">Del</button>

                            </td>
                        </tr>}

                    </tbody>
                </table> }
            else
            {
<p>No record returns</p>}

                        </form>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>