@page
@model eForms.Pages.Admin.RelationshipsModel
@{ ViewData["Title"] = "eForms Application";
    ViewData["breadcrumb1"] = "Settings";
    ViewData["breadcrumb2"] = "Relationship"; }
<div class="container-fluid">
    <div class="animated fadeIn">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> @ViewData["breadcrumb2"]
                        <div class="card-header-actions">
                            <a asp-page="CreateRelationship" class="btn btn-brand btn-facebook">Create New</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            @if (Model.relationships.Count() > 0)
                            {
                <table class="table table-responsive-sm table-bordered table-striped table-sm" id="eformtbl">
                    <thead>
                        <tr>
                            <th class="text-center">Relationship</th>
                            <th class="text-center">Created Date</th>
                            <th class="text-center">Modified Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.relationships)
                        {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Relationship)</td>
                            <td class="text-center">@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td class="text-center">@item.ModifiedDate.ToString("MM/dd/yyyy")</td>
                            <td class="text-center">
                                <a asp-page="EditRelationship" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Edit</a>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure do you want to delete this record?')" class="btn btn-danger btn-sm">Del</button>

                            </td>
                        </tr>
}

                    </tbody>
                </table> }
            else
            {
<p>No record returns</p>}

                        </form>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>
