@model eForms.Pages.Form.CreateClassNetReqModel
@{ ViewData["Title"] = "eForms Application";
    ViewData["breadcrumb1"] = "Form Catalog";
    ViewData["breadcrumb2"] = "ClassNet"; }
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>@ViewData["breadcrumb2"] - New Request</strong>
                    </div>
                    <form class="form-horizontal" method="post">
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="form.LastName"></label>
                                <div class="col-md-9">
                                    <select asp-for="aduser_selected" asp-items="@(new SelectList(Model.adusers,"mail","displayname"))" class="form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="form.Section"></label>
                                <div class="col-md-9">
                                    <input asp-for="form.Section" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="form.Section"></label>
                                <div class="col-md-9">
                                    <select asp-for="section_selected" asp-items="@(new SelectList(Model.sections,"sectionabbr","sectionabbr"))" class="form-control"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="form.Agency"></label>
                                <div class="col-md-9">
                                    <input asp-for="form.Agency" class="form-control" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="form.CellPhone"></label>
                                <div class="col-md-9">
                                    <input asp-for="form.CellPhone" class="form-control" type="text">
                                </div>
                            </div>
                                @*<div class="form-group row">
                                    <label class="col-md-3 col-form-label" for="select1">Is Disabled?</label>
                                    <div class="col-md-9">
                                        <select asp-for="post.Disabled" class="form-control">
                                            <option value="false">False</option>
                                            <option value="true">True</option>

                                        </select>
                                    </div>
                                </div>*@


                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                                <a asp-page="/Main/Forms" class="btn btn-danger">Back to List</a>
                            </div>
</form>
                </div>

            </div>

            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>