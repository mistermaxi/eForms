@page
@model eForms.Pages.Form.NewArrival.CreateNewArrivalReqModel
@{ ViewData["Title"] = "eForms Application";
    ViewData["breadcrumb1"] = "New Arrival";
    ViewData["breadcrumb2"] = "Create New Arrival"; }

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>@ViewData["breadcrumb2"] - Upload New Arrival Form</strong>
                    </div>
                    <form class="form-horizontal" method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                        <div class="card-body">
                            <div class="form-group row">

                                <div class="col-md-3">
                                    <input type="file" name="files" id="files" multiple />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <input type="submit" value="Submit" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>
