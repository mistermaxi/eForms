@page
@model eForms.Pages.Main.EditProfileModel
@{ ViewData["Title"] = "eForms Application";
    ViewData["breadcrumb1"] = "Home";
    ViewData["breadcrumb2"] = "Profile"; }
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>@ViewData["breadcrumb2"] - Edit</strong>
                    </div>
                    <form class="form-horizontal" method="post">
                        <input type="hidden" asp-for="profile.Id" />
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="profile.DisplayName"></label>
                                <div class="col-md-9">
                                    <strong>@(Model.profile.DisplayName)</strong>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="text-input" asp-for="profile.OfficePhone"></label>
                                <div class="col-md-9">
                                    <input asp-for="profile.OfficePhone" class="form-control" type="text">
                                </div>
                            </div>
                            

                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <a asp-page="../Index" class="btn btn-danger">Go Back</a>
                        </div>
                    </form>
                </div>

            </div>

            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>